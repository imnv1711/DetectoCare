<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6499E9"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".loginPage">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="  HEY"
        android:id="@+id/tvHello"
        android:fontFamily="sans-serif-black"
        android:gravity="center|left"
        android:textSize="50dp"
        android:background="#6499E9"
        android:textColor="#FFFFFF"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="   Welcome to Detectocare"
        android:id="@+id/tvwelcome"
        android:gravity="left"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:weightSum="5"
        android:background="@drawable/loginround"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Already a User ?"
            android:textColor="#6499E9"
            android:gravity="center"
            android:textSize="30dp"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Email :"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/leftround"
                android:textSize="30sp"
                android:textColor="#6499E9"
                android:gravity="center"></TextView>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/etMail"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rightround"
                android:textSize="20sp"
                android:textColor="#6499E9">

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Pwd :"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/leftround"
                android:textSize="30sp"
                android:textColor="#6499E9"
                android:gravity="center"></TextView>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/etPwd"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rightround"
                android:textSize="20sp"
                android:textColor="#6499E9"
                >

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_margin="20dp"
                android:text="Sign In"
                android:id="@+id/btSign"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:background="@drawable/perfectround"
                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_margin="20dp"
                android:id="@+id/btLogin"
                android:text="Or Sign Up !"
                android:textColor="@color/black"
                android:background="@color/white"
                android:gravity="center|top"
                android:textSize="30sp"
                ></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>